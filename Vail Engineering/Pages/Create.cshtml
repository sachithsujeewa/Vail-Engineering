@page
@model Vail_Engineering.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Record.Date" class="control-label"></label>
                <input asp-for="Record.Date" class="form-control" />
                <span asp-validation-for="Record.Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Record.IsHazzard" /> @Html.DisplayNameFor(model => model.Record.IsHazzard)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Record.BioDegradable" /> @Html.DisplayNameFor(model => model.Record.BioDegradable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Record.Quantity" class="control-label"></label>
                <input asp-for="Record.Quantity" class="form-control" />
                <span asp-validation-for="Record.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.Outlet" class="control-label"></label>
                <select asp-for="Record.Outlet" class="form-control"></select>
                <span asp-validation-for="Record.Outlet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.Comment" class="control-label"></label>
                <input asp-for="Record.Comment" class="form-control" />
                <span asp-validation-for="Record.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
